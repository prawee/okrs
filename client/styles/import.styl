@import 'nib'

.map-members
  &:after
    content: "";
    flex: auto;

  .mapping-list
    display: flex
    flex-wrap: wrap
    margin: 0 -4px

    .mapping-item
      max-width: 300px
      min-width: 200px
      padding: 6px
      margin: 5px
      flex:1
      background: white
      border-radius: 3px
      box-shadow: 0 1px 2px rgba(0,0,0,.15)

      &:hover
        background: darken(white, 5%)

      &.filled
        background: #E0FFE5

        &:hover
          background: #FFE0E0

      &.ghost-item
        height: 0
        visibility: hidden
        border: none

    .profile-source
      display: inline-block
      width: 80%

    .wekan
      display: inline-block
      width: 35px

      .member
        float: none

a.show-mapping
  text-decoration underline